{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

<style>
    .center_div{
        margin: 0 auto;
        width:80% /* value of your choice which suits your alignment */
    }
</style>
<!--// SubHeader \\-->
<div class="environment-subheader">
    <span class="subheader-transparent"></span>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>INSCRIPTION</h1>
            </div>
            <div class="col-md-12">

            </div>
        </div>
    </div>
</div>
<!--// SubHeader \\-->
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="white-box">
          <br>

            <div class="row">
                <div class="col-sm-12 col-xs-12">

                    <div class="container center_div">
                    <div class="form-group">
                        <div class="environment-fancy-title"><h2>Veuillez remplir  le  <span>formulaire</span></h2></div>
                        {{ form_widget(form.username, {'attr': {'class': '','placeholder':'Username'}}) }}

                    </div>

                    <div class="form-group">

                        {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder':'Nom'}}) }}

                    </div>

                    <div class="form-group">

                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control','placeholder':'Prenom'}}) }}

                    </div>


                    <div class="form-group">

                            <label class="custom-file">
                                <span class="custom-file-control"> importe une photo :</span>
                                {{ form_widget(form.imageprofile, {'attr': {'class': 'form-control','id':'file'}}) }}

                            </label>

                    </div>

                    <div class="form-group">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Email Address'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control','placeholder':'Password'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control','placeholder':'Confirm Password'}}) }}
                    </div>


                        <div class="form-group">
                            {{ form_widget(form.roles, {'attr': {'class': 'form-control','placeholder':'prenom'}}) }}

                        </div>
                        

<br>

    <div>
      <center> <input type="submit" class="btn btn-success"  value="{{ 'registration.submit'|trans }}" /></center>


    </div>
{{ form_end(form) }}


                </div>
            </div>

        </div>
    </div>
</div>
    <div class="col-md-3"></div>
</div>