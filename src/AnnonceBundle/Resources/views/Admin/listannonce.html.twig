{% extends '@User/Admin/base2.html.twig' %}
{% block container %}
<div class="row">
    <div class="col-lg-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Liste des annonces</h3>

            <table id="demo-foo-row-toggler" class="table toggle-circle table-hover">
                <thead>
                <tr>
                    <th data-toggle="true"> Titre de l'annonce </th>
                    <th> Nombre de Likes </th>
                    <th data-hide="phone">Image de l'annonce </th>
                    <th data-hide="all"> Statut</th>
                    <th data-hide="all"> Actions </th>
                </tr>
                </thead>
                <tbody>
                <tr class="sgrid-insert-row">
                    {% for annonces in annonces %}
                    <td>{{ annonces.titre }}</td>
                    <td>{{ annonces.likes | length}}</td>
                    <td><img src="{{ asset('uploads/annonce/' ~ annonces.photo) }}"/></td>
                    <td><span class="label label-table label-success">Active</span></td>
                    <td> <p>
                            <a href="{{ path('deleteannonce_admin', {'id':annonces.id}) }}">
                                <i class="fa fa-eraser"></i>

                            </a>
                            <a href="{{ path('updateanadmin', {'id':annonces.id}) }}">
                                <i class="fa fa-pencil"></i>

                            </a>
                        </p></td>
                </tr>
{% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.row -->
<!-- .row -->

<!-- /.row -->
{% endblock %}